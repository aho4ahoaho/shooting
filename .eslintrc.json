{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "plugins": ["@typescript-eslint"],
    "rules": {
        "@typescript-eslint/no-floating-promises": "off",
        "prefer-const": "off",
        "no-useless-escape": "off"
    },
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "ignorePatterns": ["node_modules", "dist", "vite.config.ts"]
}
